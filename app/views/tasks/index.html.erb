<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<% @tasks.each do |task| %>

	<h3><%= link_to task.title, task %></h3>
	<p>Due Date: <%= task.due_date %></p>
	<% if task.done? %>
		<p> Task Completed </p>
	<% else %>
		<p> Task in Progress </p>
	<% end %>
<br>



<hr>

<% end %>
